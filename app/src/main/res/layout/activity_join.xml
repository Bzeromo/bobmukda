<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/refrigerator"
            android:paddingTop="20dp"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textStyle="bold"
            android:fontFamily="@font/sdmisaeng"
            android:textColor="#FF978E"
            android:shadowColor="#A8A8A8"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="5"
            android:textSize="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp" />

    </LinearLayout>
    <EditText
        android:id="@+id/idEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="이메일"
        android:textColorHint="#FFD4A8"
        android:layout_gravity="center"
        android:paddingTop="10dp">
    </EditText>

    <EditText
        android:id="@+id/pwEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColorHint="#FFD4A8"
        android:hint="비밀번호(6자리이상)"
        android:inputType="textPassword"
        android:layout_gravity="center">
    </EditText>

    <EditText
        android:id="@+id/idEditName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColorHint="#FFD4A8"
        android:hint="이름"
        android:layout_gravity="center"
        android:paddingTop="40dp"></EditText>
    <EditText
        android:id="@+id/editBirth"
        android:layout_width="300dp"
        android:textColorHint="#FFD4A8"
        android:layout_height="wrap_content"
        android:hint="주민번호 앞자리(6자)"
        android:layout_gravity="center">
    </EditText>

    <EditText
        android:id="@+id/editPhoneNumber"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColorHint="#FFD4A8"
        android:hint="전화번호"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:paddingTop="40dp"></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnJoin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_design"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:text="회원가입"
            android:fontFamily="@font/sdmisaeng"
            android:textSize="20dp"
            tools:ignore="ButtonStyle"
            android:shadowColor="#A8A8A8"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"/>

        <Button
            android:id="@+id/btnback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:fontFamily="@font/sdmisaeng"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_design"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="55dp"
            android:text="뒤로가기"
            tools:ignore="ButtonStyle"
            android:shadowColor="#A8A8A8"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"/>

    </LinearLayout>

</LinearLayout>