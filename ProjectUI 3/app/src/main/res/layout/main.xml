<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/list_icon"></ImageView>
    <LinearLayout
        android:id="@+id/currentFoodLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_margin="30dp"
        android:orientation="vertical"
        android:background="@drawable/current_food">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="식재료 현황"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:gravity="center"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="양파"
            android:textSize="15dp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="달걀"
            android:layout_weight="1"
            android:textSize="15dp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="대파"
            android:layout_weight="1"
            android:textSize="15dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/todayScheduleLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/currentFoodLayout"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_margin="30dp"
        android:orientation="vertical"
        android:background="@drawable/current_food">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘의 일정"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:gravity="center"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="모바일프로그래밍"
            android:textSize="15dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/todayScheduleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/jayook"></ImageView>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/odeng"
            android:layout_weight="1"></ImageView>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/deok_bok_e"></ImageView>
    </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#3355BA"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:id="@+id/home_button"
            android:src="@drawable/home_icon_pressed"></ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/recommend_recipe_button"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:src="@drawable/recipe_icon"></ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/scheduler_button"
            android:src="@drawable/scheduler_icon"></ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/favorite_button"
            android:src="@drawable/favorite_icon"></ImageView>
    </LinearLayout>

</RelativeLayout>