<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:scaleType="fitCenter"
                android:id="@+id/back_image"
                android:src="@drawable/back_icon"></ImageView>

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_view"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                app:iconifiedByDefault="false"
                app:queryHint="요리 이름 또는 재료를 입력하세요" >

            </androidx.appcompat.widget.SearchView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:id="@+id/today_recommend_box"
            android:layout_marginTop="20dp"
            android:background="@drawable/current_food"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/today_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘의 추천"
                android:textSize="30dp"></TextView>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:id="@+id/recipe">

                    <ImageView
                        android:layout_width="74dp"
                        android:layout_height="81dp"
                        android:src="@drawable/pork_kimchi"></ImageView>

                    <TextView
                        android:layout_width="293dp"
                        android:layout_height="match_parent"
                        android:text="돼지고기 김치볶음"
                        android:textSize="30dp"
                        android:gravity="center"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <ImageView
                        android:layout_width="74dp"
                        android:layout_height="81dp"
                        android:src="@drawable/odeng"></ImageView>

                    <TextView
                        android:layout_width="293dp"
                        android:layout_height="match_parent"
                        android:text="어묵탕"
                        android:textSize="30dp"
                        android:gravity="center"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <ImageView
                        android:layout_width="74dp"
                        android:layout_height="81dp"
                        android:src="@drawable/deok_bok_e"></ImageView>

                    <TextView
                        android:layout_width="293dp"
                        android:layout_height="match_parent"
                        android:text="떡볶이"
                        android:textSize="30dp"
                        android:gravity="center"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <ImageView
                        android:layout_width="74dp"
                        android:layout_height="81dp"
                        android:src="@drawable/fried_rice"></ImageView>

                    <TextView
                        android:layout_width="293dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="계란 볶음밥"
                        android:textSize="30dp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <ImageView
                        android:layout_width="74dp"
                        android:layout_height="81dp"
                        android:src="@drawable/lemon_garlic_shrimp_pasta"></ImageView>

                    <TextView
                        android:layout_width="293dp"
                        android:layout_height="match_parent"
                        android:text="마늘 새우 파스타"
                        android:textSize="30dp"
                        android:gravity="center"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <ImageView
                        android:layout_width="74dp"
                        android:layout_height="81dp"
                        android:src="@drawable/tamago_maki"></ImageView>

                    <TextView
                        android:layout_width="293dp"
                        android:layout_height="match_parent"
                        android:text="계란말이"
                        android:textSize="30dp"
                        android:gravity="center"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <ImageView
                        android:layout_width="74dp"
                        android:layout_height="81dp"
                        android:src="@drawable/mafa_tofu"></ImageView>

                    <TextView
                        android:layout_width="293dp"
                        android:layout_height="match_parent"
                        android:text="마파두부"
                        android:textSize="30dp"
                        android:gravity="center"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <ImageView
                        android:layout_width="74dp"
                        android:layout_height="81dp"
                        android:src="@drawable/chicken_breast_rice"></ImageView>

                    <TextView
                        android:layout_width="293dp"
                        android:layout_height="match_parent"
                        android:text="닭가슴살 덮밥"
                        android:textSize="30dp"
                        android:gravity="center"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <ImageView
                        android:layout_width="74dp"
                        android:layout_height="81dp"
                        android:src="@drawable/egg_salad"></ImageView>

                    <TextView
                        android:layout_width="293dp"
                        android:layout_height="match_parent"
                        android:text="달걀 샐러드"
                        android:textSize="30dp"
                        android:gravity="center"></TextView>
                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#3355BA"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:id="@+id/home_button"
            android:src="@drawable/home_icon"></ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:id="@+id/recommend_recipe_button"
            android:src="@drawable/recipe_icon_pressed"></ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/scheduler_button"
            android:src="@drawable/scheduler_icon"></ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/favorite_button"
            android:src="@drawable/favorite_icon"></ImageView>
    </LinearLayout>



</RelativeLayout>